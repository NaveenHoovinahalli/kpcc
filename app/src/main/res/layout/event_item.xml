<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/date_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/feed_rounded_tv"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp">

        <teli.com.kpcc.views.CcTextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="23"
            android:textStyle="bold"
            />

        <teli.com.kpcc.views.CcTextView
            android:id="@+id/month_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec"
            android:textSize="12sp"
            android:layout_below="@+id/date_tv"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <teli.com.kpcc.views.CcTextView
        android:id="@+id/event_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello world"
        android:layout_toRightOf="@+id/date_box"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        />

    <teli.com.kpcc.views.CcTextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello world"
        android:layout_toRightOf="@+id/date_box"
        android:maxLines="2"
        android:layout_below="@+id/event_head"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/date_box"
        android:layout_below="@+id/event_description"
        android:padding="5dp"
        >

    <ImageView android:id="@+id/time_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clock_icon"
       android:layout_marginRight="5dp"
        />

    <teli.com.kpcc.views.CcTextView
        android:id="@+id/event_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/time_iv"
       android:layout_centerInParent="true"
        android:text="hello"
        />
    </RelativeLayout>


</RelativeLayout>