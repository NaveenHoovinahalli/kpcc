<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <teli.com.kpcc.views.CcEditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:padding="5dp"/>

    <RelativeLayout android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject">

        <teli.com.kpcc.views.CcEditText
            android:id="@+id/user_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="@string/type_feedback"
            android:minHeight="200dp"
            android:gravity="top"
            android:background="@android:color/white"
            android:padding="3dp"
            android:maxLength="200"/>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/feedback"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <ImageView android:id="@+id/attachment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/attached_icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/submit_btn"
            android:text="SEND"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/green_rounded_btn"
            android:layout_margin="20dp"
            />
        <!-- style="@style/rounded_btn.green"-->
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_below="@id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:id="@+id/llupdatedImages">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fbivone"
            android:layout_margin="2dp"
            android:background="#000000"
            android:visibility="invisible"
            android:src="@drawable/appicon"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fbivtwo"
            android:layout_margin="2dp"
            android:background="#000000"
            android:visibility="invisible"
            android:src="@drawable/appicon"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fbivthree"
            android:layout_margin="2dp"
            android:background="#000000"
            android:visibility="invisible"
            android:src="@drawable/appicon"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fbivfour"
            android:layout_margin="2dp"
            android:background="#000000"
            android:visibility="invisible"
            android:src="@drawable/appicon"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fbivfive"
            android:layout_margin="2dp"
            android:background="#000000"
            android:visibility="invisible"
            android:src="@drawable/appicon"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/fragmentofmenu"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />

</RelativeLayout>